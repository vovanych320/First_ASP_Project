@model AllOrdersViewModel


<div>
    <h2 class="d-flex justify-content-center" style="color:white; margin-top:60px;">Всі ліки</h2>
</div>
<div class="d-flex justify-content-center">
    <div style="display:flex; flex-wrap:wrap;">
        @{
            foreach (var el in Model.allOrders)
            {
                <div class="alert alert-warning mt-3" style="padding:15px;">
                    <b style="color:rgb(54,61,70)">Номер замовлення: </b>@el.orderNumber<br />
                    <b style="color:rgb(54,61,70)">Ім'я покупця: </b>@el.name<br />
                    <b style="color:rgb(54,61,70)">Прізвище: </b>@el.surname <br />
                    <b style="color:rgb(54,61,70)">Час замовленя: </b>@el.orderTime <br />
                    <b style="color:rgb(54,61,70)">Телеофон </b>@el.phone <br />
                                                                          <div class="alert alert-warning mt-3" style="padding:15px;">
                                                                              @{
                                                                                  foreach (var le in Model.orDetails)
                                                                                  {
                                                                                      foreach (var lol in el.getDrug(le))
                                                                                      {
                                                                                                                                                            <div class="alert alert-primary mt-3" style="padding:15px;">
                                                                                                                                                                <b style="color:rgb(54,61,70)">Назва: </b>@lol.name<br />
                                                                                                                                                                <b style="color:rgb(54,61,70)">Виробник: </b>@lol.producer<br />
                                                                                                                                                                <b style="color:rgb(54,61,70)">Кількість: </b>@lol.volume<br />
                                                                                                                                                                <b style="color:rgb(54,61,70)">Доза: </b>@lol.doze<br />
                                                                                                                                                                <b style="color:rgb(54,61,70)">Опис: </b>@lol.description<br />
                                                                                                                                                            </div>
                                                                                      }
                                                                                      
                                                                                          }

                                                                                          }
                                                                                      </div>
                                                                                  </div>
            }
        }
    </div>  
</div>
